<%- include('partials/header.ejs') -%>

<body>
<div class="container">
    <h1>Home</h1>
    <p><%= homeStartingContent %></p>

    <div class="posts">
        <% posts.forEach(function(post){ %>
            <div class="post">
                <h2><%= post.title %></h2>
                <p><%= post.content.slice(0, 100) %>... <a href="/posts/<%= post.slug %>">Read more</a></p>
            </div>
        <% }); %>
    </div>
</div>
</body>

